<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_outfit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tgwcl.divnitini.twgcl_v1.ViewOutfit">

    <ScrollView
        android:id="@+id/scrollViewContainer"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="-1dp"
        tools:layout_editor_absoluteX="2dp">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/largePostDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_conversion_absoluteX="8dp"
                tools:layout_conversion_absoluteY="8dp"
                tools:layout_conversion_absoluteWidth="140dp"
                tools:layout_conversion_absoluteHeight="40dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="0.033" />


            <ImageView
                android:id="@+id/bigCollagePicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/largePostDate"
                tools:layout_conversion_absoluteX="8dp"
                tools:layout_conversion_absoluteY="72dp"
                tools:layout_conversion_absoluteWidth="0dp"
                tools:layout_conversion_absoluteHeight="0dp"
                android:layout_marginTop="21dp"
                app:layout_constraintHorizontal_bias="0.501"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp" />

            <TextView
                android:id="@+id/vibeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Herrro"
                android:paddingLeft="3dp"
                android:paddingRight="16dp"
                android:gravity="left"
                app:layout_constraintTop_toBottomOf="@+id/bigCollagePicture"
                tools:layout_conversion_absoluteX="12dp"
                tools:layout_conversion_absoluteY="122dp"
                tools:layout_conversion_absoluteWidth="57dp"
                tools:layout_conversion_absoluteHeight="24dp"
                android:layout_marginTop="44dp"
                android:layout_marginRight="90dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="0.038" />

            <TextView
                android:id="@+id/dosText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:paddingLeft="3dp"
                android:paddingRight="16dp"
                android:text="Herrro"
                android:gravity="left"
                app:layout_constraintTop_toBottomOf="@+id/vibeText"
                tools:layout_conversion_absoluteX="12dp"
                tools:layout_conversion_absoluteY="166dp"
                tools:layout_conversion_absoluteWidth="62dp"
                tools:layout_conversion_absoluteHeight="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/vibeText"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="@+id/vibeText"
                app:layout_constraintHorizontal_bias="0.0" />

            <TextView
                android:id="@+id/dontText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Herrro"
                android:gravity="left"
                android:paddingLeft="3dp"
                android:paddingRight="16dp"
                tools:layout_conversion_absoluteX="12dp"
                tools:layout_conversion_absoluteY="166dp"
                tools:layout_conversion_absoluteWidth="62dp"
                tools:layout_conversion_absoluteHeight="24dp"
                app:layout_constraintLeft_toLeftOf="@+id/vibeText"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="22dp"
                app:layout_constraintTop_toBottomOf="@+id/dosText"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="@+id/vibeText"
                app:layout_constraintHorizontal_bias="0.0" />


        </android.support.constraint.ConstraintLayout>

    </ScrollView>


</android.support.constraint.ConstraintLayout>
